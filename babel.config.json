{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "node": "current"
                }
            }
        ],
        "@babel/preset-typescript"
    ],
    "plugins": [
        [
            "module-resolver",
            {
                "alias": {
                    "@controller": "./src/controller",
                    "@repositories": "./src/repositories",
                    "@services": "./src/services",
                    "@config": "./src/config",
                    "@src": "./src"
                }
            }
        ]
    ],
    "ignore": [
        "**/*.spec.ts"
    ]
}